<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
>

    <TextView
            android:id="@+id/text_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_100"
            android:layout_marginEnd="@dimen/margin_normal_100"
            android:layout_marginTop="@dimen/margin_normal_100"
            android:textAppearance="@style/MultilineTextAppearance"
            tools:text="@sample/paragraph"
    />

    <TextView
            android:id="@+id/title_casts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal_100"
            style="@style/Widget.HighlightBackgroundText"
            android:text="@string/title_cast_list"
    />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_cast_vertical"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/margin_normal_100"
            tools:listitem="@layout/item_cast_vertical"
    />

    <TextView
            android:id="@+id/title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_normal_100"
            style="@style/Widget.HighlightBackgroundText"
            android:text="@string/title_detail"
    />

    <include layout="@layout/layout_movie_info_detail"/>

</LinearLayout>