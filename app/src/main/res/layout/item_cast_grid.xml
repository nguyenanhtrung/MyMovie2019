<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_item_cast_grid"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_item_cast_grid"
            android:layout_width="@dimen/width_image_cast"
            android:layout_height="@dimen/height_image_cast"
            android:transitionName="@string/text_image_cast_transition"
            style="@style/Widget.CircleCastImage"
            android:layout_marginTop="@dimen/margin_normal_100"
            tools:src = "@tools:sample/avatars"
            />

        <TextView
            android:id="@+id/text_cast_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="2"
            android:transitionName="@string/text_name_cast_transition"
            android:layout_marginTop="@dimen/margin_normal_100"
            android:textAppearance="@style/HighlightSubTitleAppearance"
            tools:text = "@tools:sample/full_names"
            />

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>