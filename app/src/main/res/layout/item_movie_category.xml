<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/width_item_category"
    android:layout_height="@dimen/height_item_category"
    android:layout_marginEnd="@dimen/margin_normal_100"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/margin_normal_100"
        android:layout_marginEnd="@dimen/margin_normal_100"
        android:gravity="center_horizontal"
        style="@style/Widget.HighlightTextView"
        tools:text="@tools:sample/full_names" />

</com.google.android.material.card.MaterialCardView>