<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/margin_normal_100"
    app:cardCornerRadius="@dimen/card_view_radius">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_normal_100"
        android:layout_marginTop="@dimen/margin_normal_100"
        android:layout_marginBottom="@dimen/margin_normal_100"
        android:layout_marginEnd="@dimen/margin_normal_100"
        >

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_image_tv_show"
            android:layout_width="@dimen/width_image_movie_vertical"
            android:layout_height="@dimen/height_image_movie_vertical"
            app:cardCornerRadius="@dimen/card_view_radius"
            >
            <ImageView
                android:id="@+id/image_view_tv_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars"
                tools:ignore="ContentDescription" />
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/text_name_tv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_100"
            android:layout_marginTop="@dimen/margin_small_100"
            android:layout_toEndOf="@id/card_image_tv_show"
            android:textAppearance="@style/HighlightSubTitleAppearance"
            tools:text="Pokemon Detective"
            />

        <TextView
            android:id="@+id/text_categories_tv_show"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_100"
            android:layout_toEndOf="@id/card_image_tv_show"
            android:layout_below="@id/text_name_tv_show"
            android:textAppearance="@style/NormalSubTitleAppearance"
            tools:text="Fantasy | Mystery"
            />

        <RatingBar
            android:id="@+id/rating_bar_tv_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_normal_100"
            android:layout_marginTop="@dimen/margin_small_100"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_toEndOf="@id/card_image_tv_show"
            android:layout_below="@id/text_categories_tv_show"
            />


    </RelativeLayout>



</com.google.android.material.card.MaterialCardView>